<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/transparent</item>-->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/F1F3F4</item>

        <!--<item name="android:windowIsTranslucent">true</item>-->

        <item name="android:windowAnimationStyle">@style/noAnimation</item>
    </style>

    <style name="fade" parent="@android:style/Animation.Translucent">
        <item name="android:activityOpenEnterAnimation">@anim/player_slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/player_slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/player_slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/player_slide_out_right</item>
        <!--<item name="android:windowEnterAnimation">@anim/player_slide_in_left</item>-->
        <!--<item name="android:windowExitAnimation">@anim/player_slide_out_right</item>-->
    </style>

    <style name="AppTheme.withAnimation" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.BottomMenu">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--app:titleTextColor="@color/primary_text"-->
    <!--app:subtitleTextColor="@color/secondary_text"-->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--<style name="AppTheme.ToolBar" parent="ThemeOverlay.AppCompat.Light">-->
    <!--<item name="titleTextColor">@color/FCFDFD</item>-->
    <!--<item name="subtitleTextColor">@color/A7A6A6</item>-->
    <!--</style>-->

    <style name="ToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/AppTheme.TitleTextStyle</item>
        <item name="subtitleTextAppearance">@style/AppTheme.SubTitleTextStyle</item>
    </style>

    <style name="AppTheme.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/FCFDFD</item>
    </style>

    <style name="AppTheme.SubTitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/A7A6A6</item>
    </style>

    <style name="tabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>

    <!--横线样式-->
    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/black_10</item>
    </style>

    <!--竖线样式-->
    <style name="line_vertical">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black_10</item>
    </style>

    <style name="noAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>

    </style>

</resources>
