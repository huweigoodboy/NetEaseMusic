<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_111111"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_60"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/transparent"
        app:navigationIcon="@drawable/actionbar_back"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:subtitleTextAppearance="@style/AppTheme.SubTitleTextStyle"
        app:titleTextAppearance="@style/AppTheme.TitleTextStyle">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.huwei.neteasemusic.ui.widget.CheckableImageView
                android:id="@+id/iv_heart"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/common_ripple_dark_selector"
                android:src="@drawable/selector_rdi_love" />

            <ImageView
                android:id="@+id/iv_download"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:background="@drawable/common_ripple_dark_selector"
                android:src="@drawable/selector_play_icn_dld" />

            <ImageView
                android:id="@+id/iv_cmt"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:background="@drawable/common_ripple_dark_selector"
                android:src="@drawable/level_play_icn_cmt" />

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/common_ripple_dark_selector"
                android:src="@drawable/selector_rdi_more" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/tv_time_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/AFAFAF"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:layout_weight="1"
                android:minHeight="2dp"
                android:maxHeight="2dp"
                android:progressDrawable="@drawable/bg_seekbar"

                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp" />

            <TextView
                android:id="@+id/tv_time_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/A7A6A6"
                android:textSize="12sp"
                android:text="00:00"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">

            <ImageView
                android:id="@+id/iv_loop_mode"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/level_play_mode"
                android:layout_marginRight="11dp"/>

            <ImageView
                android:id="@+id/iv_play_prev"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:src="@drawable/selector_play_btn_prev"/>

            <com.huwei.neteasemusic.ui.widget.CheckableImageView
                android:id="@+id/iv_play"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:src="@drawable/selector_rdi_play_btn"/>

            <ImageView
                android:id="@+id/iv_play_next"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:src="@drawable/selector_play_btn_next"/>

            <ImageView
                android:id="@+id/iv_play_src"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginLeft="11dp"
                android:src="@drawable/selector_play_icn_src"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>